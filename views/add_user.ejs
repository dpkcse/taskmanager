
<%- include('partials/head') %>
<!-- Begin page -->
<div id="wrapper">
    <!-- ========== Top Sidebar Start ========== -->
    <%- include('partials/top_nav') %>
    <!-- ========== Top Sidebar End ========== -->

    <!-- ========== Left Sidebar Start ========== -->
    <%- include('partials/left_nav') %>
    <!-- ========== Left Sidebar End ========== -->
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-box">
                            <h4 class="header-title m-t-0 m-b-30">Add New User</h4>
                            <% if(msg != 'NA'){ %>
                                <p class="text-success">
                                    <%= msg %>
                                </p>
                            <% } %>
                            <% if(errors != 'NA'){ %>
                                <p class="text-success">
                                    <%= JSON.stringify(errors);  %>
                                </p>
                            <% } %>
                            <form action="/users/entry" data-parsley-validate novalidate method="POST" >
                                <div class="form-group">
                                    <label for="emailAddress">Email address*</label>
                                    <input type="email" name="email" parsley-trigger="change" required
                                           placeholder="Enter email" class="form-control" id="emailAddress">
                                </div>
                                <div class="form-group">
                                    <label for="userPassword">Password*</label>
                                    <input type="password" name="password" placeholder="Password" required
                                           class="form-control" id="userPassword">
                                </div>
                                <div class="form-group">
                                    <label for="userName">Member Name*</label>
                                    <input type="text" name="name" parsley-trigger="change" required placeholder="Enter user email" class="form-control" id="userName">
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Member Access</label>
                                    <select class="form-control" name="access">
                                        <option value="1">Super Admin</option>
                                        <option value="2">Manager</option>
                                        <option value="3">Developer</option>
                                        <option value="4">Read only</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Access will defined as : Super Admin can do anything, Manager can create task, close task, Delete task, Developer only create task and delete task, Readonly mode only member can see assigned task.</label>
                                </div>
                                
                                <div class="form-group text-right m-b-0">
                                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                                        Submit
                                    </button>
                                    <button type="reset" class="btn btn-default waves-effect waves-light m-l-5">
                                        Cancel
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- container -->

        </div> <!-- content -->

        <%- include('partials/foot_right')%>
    </div>
    <!-- ============================================================== -->
    <!-- End Right content here -->
    <!-- ============================================================== -->
    <!-- Right Sidebar -->
    <%- include('partials/noitification')%>
    <!-- /Right-bar -->

</div>
<!-- END wrapper -->
<%- include('partials/foot') %>
